= form_for @item do |f|
  商品名
  =f.text_field :name
  %br/
  価格
  =f.number_field :price
  %br/
  #image-box
    = f.fields_for :images do |image|
      .js-file_group{"data-index" => "#{image.index}"}
        = image.file_field :src, class: 'js-file'
        %br/
        %span.js-remove 削除
  = f.submit
